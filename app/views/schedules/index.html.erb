<%= render "schedules/modal" %>

<div class="schedule-header">
  <h1 class="text-center">Your Schedule</h1>
  <div class="row ">
    <div class="col-md-4">
      <button class="btn btn-info change-week" data-id="-1"><</button>
      :previous week
    </div>
    <div class="col-md-4 text-center">
      <button type="button" class="btn btn-info btn-lg create-schedule" data-toggle="modal" data-target="#myModal">Create New Schedule</button>
    </div>
    <div class="col-md-4 text-right">
      next week:
      <button class="btn btn-info change-week" data-id="1">></button>
    </div>
  </div>
</div>

<div class="week row text-center">
  <div class="day-card" data-id"-1">
    day1
  </div>
  <div class="day-card" data-id"0">
    day2
  </div>
  <div class="day-card" data-id"1">
    day3
  </div>
  <div class="day-card" data-id"2">
    day4
  </div>
  <div class="day-card" data-id"3">
    day5
  </div>
  <div class="day-card" data-id"4">
    day6
  </div>
  <div class="day-card" data-id"5">
    day7
  </div>
</div>
