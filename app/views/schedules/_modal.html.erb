<div id="myModal" class="text-center modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close close-modal" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-center">Create Schedule</h4>
      </div>
      <div class="schedule-errors"></div>
      <div class="modal-body">
        <h3>Schedule Title</h3>
        <input type="text" class="form-control schedule-title" style="font-size:30px">
        <div class="col-md-6">
          <h3>Start Date</h3>
          <input type="date" class="start-date">
        </div>
        <div class="col-md-6">
          <h3>End Date</h3>
          <input type="date" class="end-date">
        </div>
        <h3>Timeslots:</h3>
        <div class="timeslots">

        </div>
      </div>
      <button type="button" class="btn btn-info add-timeslot">Add Time Slot</button>
      <div class="modal-footer">
        <button type="button" class="btn btn-success submit-schedule">Submit</button>
        <button type="button" class="btn btn-default close-modal" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
